<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
      name="viewModel"
      type="com.news.partybuilding.viewmodel.SplashViewModel" />

  </data>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMainColor"
    tools:context=".ui.splash.SplashActivity">

<!--    <com.airbnb.lottie.LottieAnimationView-->
<!--      android:id="@+id/animationView"-->
<!--      android:layout_width="300dp"-->
<!--      android:layout_height="300dp"-->
<!--      app:lottie_rawRes="@raw/travel"-->
<!--      android:layout_gravity="center"-->
<!--      app:lottie_autoPlay="true"-->
<!--      app:lottie_loop="true"/>-->

    <LinearLayout
      android:id="@+id/party_building_top_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/splash_party_building"
        android:textColor="@color/colorWhite"
        android:layout_gravity="top|center"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textSize="30sp"/>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/splash_party_building_pinyin"
        android:textColor="@color/colorWhite"
        android:layout_gravity="top|center"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:textSize="17sp"/>
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
      android:id="@+id/view_pager"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />


    <Button
      android:id="@+id/materialButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Start Now"
      android:textSize="16sp"
      android:paddingStart="20dp"
      android:paddingEnd="20dp"
      android:textColor="@color/white"
      android:visibility="gone"
      android:background="@drawable/gray_half_border"
      android:gravity="center"
      android:layout_gravity="bottom|center"
      android:layout_marginBottom="68dp"
      />

    <TextView
      android:id="@+id/party_building_bottom_text"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/splash_bottom_text"
      android:textColor="@color/colorWhite"
      android:layout_gravity="bottom|center"
      android:gravity="center"
      android:layout_marginBottom="70dp"
      android:textSize="18sp"/>

    <LinearLayout
      android:orientation="horizontal"
      android:id="@+id/linearIndicator"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_gravity="bottom|center"
      android:layout_marginBottom="68dp"
      >

    </LinearLayout>


  </FrameLayout>
</layout>