<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>
   <variable
     name="mineViewModel"
     type="com.news.partybuilding.viewmodel.MineViewModel" />
   <import type="android.view.View"/>
  </data>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
      android:id="@+id/login_linear"
      android:layout_width="match_parent"
      android:layout_height="180dp"
      android:orientation="vertical"
      android:gravity="center"
      android:background="@color/colorMainColor">

      <Button
        android:id="@+id/go_login"
        android:layout_width="95dp"
        android:layout_height="36dp"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="@color/colorMainColor"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center"
        android:visibility="@{mineViewModel.loginOrNot ? View.GONE : View.VISIBLE}"
        android:background="@drawable/bg_white_half_border"/>

      <LinearLayout
        android:id="@+id/person_center"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="@{mineViewModel.loginOrNot ? View.VISIBLE : View.GONE, default=`gone`}"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ImageView
          android:layout_width="44dp"
          android:layout_height="match_parent"
          android:src="@drawable/icon_default_profile"/>
        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:textColor="@color/colorWhite"
          android:textSize="18sp"
          android:layout_marginStart="16dp"
          android:layout_weight="1"
          android:text="我爱中国共产党"/>

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_gravity="center"
          android:src="@drawable/icon_go_right"/>

      </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="98dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      app:cardCornerRadius="8dp"
      app:cardElevation="8dp"
      android:layout_below="@id/login_linear"
      android:layout_marginTop="-49dp"
      >
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <LinearLayout
          android:id="@+id/my_favourites"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_weight="1">

          <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_my_favorites"/>

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="13dp"
            android:textSize="15sp"
            android:textColor="@color/colorTextColor"
            android:text="我的收藏"/>

        </LinearLayout>
        <LinearLayout
          android:id="@+id/my_records"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_weight="1">

          <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_history_records"/>

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="13dp"
            android:textSize="15sp"
            android:textColor="@color/colorTextColor"
            android:text="历史记录"/>

        </LinearLayout>
        <LinearLayout
          android:id="@+id/my_message"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_weight="1">

          <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_message"/>

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="13dp"
            android:textSize="15sp"
            android:textColor="@color/colorTextColor"
            android:text="我的消息"/>

        </LinearLayout>
        <LinearLayout
          android:id="@+id/my_downloads"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:gravity="center"
          android:layout_weight="1">

          <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_download"/>

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="13dp"
            android:textSize="15sp"
            android:textColor="@color/colorTextColor"
            android:text="本地下载"/>

        </LinearLayout>

      </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/login_linear"
      android:orientation="vertical"
      android:paddingTop="73dp"
      >

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:visibility="@{mineViewModel.loginOrNot ? View.VISIBLE : View.GONE}"
        >

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginStart="16dp"
          android:src="@drawable/icon_verified"/>

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="实名认证"
          android:layout_marginStart="16dp"
          android:textSize="15sp"
          android:textColor="@color/colorTextColor"
          />

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:src="@drawable/icon_go_right"/>

      </LinearLayout>
      
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        >

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginStart="16dp"
          android:src="@drawable/icon_about_us"/>

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="关于我们"
          android:layout_marginStart="16dp"
          android:textSize="15sp"
          android:textColor="@color/colorTextColor"
          />

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:src="@drawable/icon_go_right"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        >

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginStart="16dp"
          android:src="@drawable/icon_contact_us"/>

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="联系我们"
          android:layout_marginStart="16dp"
          android:textSize="15sp"
          android:textColor="@color/colorTextColor"
          />

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:src="@drawable/icon_go_right"/>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        >

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginStart="16dp"
          android:src="@drawable/icon_service"/>

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="服务协议"
          android:layout_marginStart="16dp"
          android:textSize="15sp"
          android:textColor="@color/colorTextColor"
          />

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:src="@drawable/icon_go_right"/>

      </LinearLayout>

      <LinearLayout
        android:id="@+id/about_app"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        >

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginStart="16dp"
          android:src="@drawable/icon_about_app"/>

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="关于APP"
          android:layout_marginStart="16dp"
          android:textSize="15sp"
          android:textColor="@color/colorTextColor"
          />

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginStart="16dp"
          android:layout_marginEnd="16dp"
          android:src="@drawable/icon_go_right"/>

      </LinearLayout>


      <LinearLayout
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_vertical"
        android:visibility="@{mineViewModel.loginOrNot ? View.VISIBLE : View.GONE}"
        >

        <ImageView
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_marginStart="16dp"
          android:src="@drawable/icon_logout"/>

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="退出登录"
          android:layout_marginStart="16dp"
          android:textSize="15sp"
          android:textColor="@color/colorTextColor"
          />

      </LinearLayout>

    </LinearLayout>


  </RelativeLayout>

</layout>